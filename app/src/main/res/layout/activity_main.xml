<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeActivity">
   <android.support.v7.widget.Toolbar
       android:id="@+id/home_activity_tool_content"
       android:layout_width="match_parent"
       android:background="#bcd889"
       android:layout_height="?actionBarSize">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <ImageView
               android:id="@+id/home_activity_tool_iv_icon"
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:layout_centerVertical="true"
               android:onClick="onClick"
               android:src="@drawable/icon_defualt_people"/>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="40dp"
               android:layout_centerInParent="true"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/home_activity_tool_tv_content"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:gravity="center"
                   android:textSize="28dp"
                   android:text="花儿好看"/>
               <Button
                   android:id="@+id/home_activity_tool_btn_refluse"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_gravity="center"
                   android:background="@drawable/default_ptr_rotate"
                   android:onClick="onClick"/>
           </LinearLayout>
           <ImageView
               android:id="@+id/home_activity_tool_iv_ording"
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:layout_marginRight="10dp"
               android:onClick="onClick"
               android:src="@drawable/icon_add_account"/>
       </RelativeLayout>
   </android.support.v7.widget.Toolbar>
    <android.support.design.widget.TabLayout
        android:id="@+id/home_activity_tab_title"
        android:layout_width="match_parent"
        app:tabMode="scrollable"
        android:layout_below="@id/home_activity_tool_content"
        android:layout_height="60dp"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/home_activity_vp_fragment"
        android:layout_width="match_parent"
        android:layout_below="@id/home_activity_tab_title"
        android:layout_height="match_parent"/>
</RelativeLayout>
